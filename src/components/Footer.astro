---
import { defaultLang, globalDictionary } from '../i18n/dictionary';
import { getLangFromURL, getTranslations } from '../i18n/util.ts';

const lang = getLangFromURL(Astro.url) || defaultLang;
const dictionary = getTranslations(lang, globalDictionary);
const { githubUsername } = Astro.props;
---
<style>
  footer {
    min-width: 300px;
    height: 30px;
    margin: 15px auto;

    display: flex;
    justify-content: center;
    align-items: center;

    text-align: center;
    text-wrap: balance;
  }
</style>

<footer>
  <p>{dictionary('footer.credits')} <a href={`https://github.com/${githubUsername}`} target='_blank'>@{githubUsername}</a></p>
</footer>